<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Luxoria.App.Views.OpenCollectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="500" Height="300">

    <StackPanel Margin="20">
        <TextBlock Text="Select a folder :" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,10" />

        <TextBox x:Name="FolderPathTextBox"  IsReadOnly="True"  PlaceholderText="Selected folder path..."  Margin="0,0,0,20" Padding="10" />
        <Button Content="Browse..." Click="BrowseButton_Click" Width="100" Margin="0,0,0,20" HorizontalAlignment="Right"/>

        <TextBlock Text="Collection Name :" Style="{StaticResource BodyStrongTextBlockStyle}" Margin="0,0,0,10" />
        
        <TextBox x:Name="CollectionNameTextBox" PlaceholderText="Collection #1" />
    </StackPanel>
</UserControl>