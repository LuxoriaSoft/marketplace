<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LuxFilter.Components.ToolBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LuxFilter.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="3">
            <StackPanel Orientation="Vertical">
                <Expander Header="Rating" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="5" IsExpanded="True">
                    <Grid x:Name="RGrid"/>
                </Expander>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <Expander Header="Flags" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="5" IsExpanded="True">
                    <Grid x:Name="FGrid"/>
                </Expander>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <Expander Header="Scores" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Padding="5" IsExpanded="True">
                    <Grid x:Name="SGrid"/>
                </Expander>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
